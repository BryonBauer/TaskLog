@model LoginUser

<h1>Login</h1>

<form asp-action="processlogin" class="Container" method="POST">
    <span class="text-center">@Html.Raw(TempData["alertMessage"])</span>
    <div class="form-group">
        <span asp-validation-for="LoginEmail"></span>
        <label asp-for="LoginEmail"></label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Enter email" asp-for="LoginEmail">
    </div>
    <div class="form-group">
        <span asp-validation-for="LoginPassword"></span>
        <label asp-for="LoginPassword"></label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="LoginPassword">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<small><a href="/">Need an account?</a></small>